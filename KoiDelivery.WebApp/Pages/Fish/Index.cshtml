@page
@model KoiDelivery.WebApp.Pages.Fish.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].SizeCm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].LifespanYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].CareRequirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].NotableFeatures)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.KoiFish) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeCm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LifespanYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CareRequirements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotableFeatures)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
